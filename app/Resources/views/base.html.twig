<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block metatags %}{% endblock %}
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('bundles/assets/vendor.css') }}">
      <link rel="stylesheet" href="{{ asset('bundles/assets/main.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
  <body>
    <div class="main-wrapper">
        {% block header %}{% endblock %}
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}
      <script src="{{ asset('bundles/assets/manifest.js') }}"></script>
      <script src="{{ asset('bundles/assets/vendor.js') }}"></script>
    {% endblock %}
  </body>
</html>
